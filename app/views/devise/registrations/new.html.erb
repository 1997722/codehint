<div class="container-fluid px-0 background-section">  
<br>
<br>
  <h1 class="text-center">Sign up</h1>

  <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" } do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="col-10 offset-1 col-md-4 offset-md-4">    
        <div class="form-group">
          <%= f.label :nickname %> <em>(6 characters maximum)</em>
          <%= f.text_field :nickname, autofocus: true, maxlength: "6", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
        <br>
        <div class="actions d-flex justify-content-center">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

  <%# <%= render "devise/shared/links" %> 
</div>
