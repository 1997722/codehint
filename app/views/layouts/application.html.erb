<!doctype html>
<html lang="ja" data-bs-theme="auto">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <title>Codehint</title>
    <%= stylesheet_link_tag 'application', 'custom_styles', media: 'all', "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <style>
      /* カスタムCSSを追加 */
      .search-form {
        display: flex;
        align-items: center;
      }

      .search-form .custom-search-input {
        flex: 3; /* 検索フォームの幅を広げます */
        margin-right: 10px; /* ボタンとの間に隙間を作ります */
      }
    </style>
  </head>
  <body style="padding-top:5rem;">
  <div class="container">   
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="<%= root_path %>">
          <i class="fas fa-fire"></i> Share
        </a>
        <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#main_nav" data-turbo-method="false">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="main_nav">
          <ul class="navbar-nav mx-auto">
            <li class="nav-item">
                <%= form_with(url: search_posts_path, method: :get, class: "search-form", local: true) do |form| %>
                  <div class="input-group">
                    <%= form.text_field :tag_name, placeholder: "キーワード", class: "form-control custom-search-input" %>
                    <div class="input-group-append">
                      <%= form.submit "検索", class: "btn btn-light text-nowrap search-btn" %>
                    </div>
                  </div>
                <% end %>  
            </li>
          </ul>
          <ul class="navbar-nav ms-auto">
            <% if current_user && !(controller_name == "posts" && action_name == "new") %>
              <li class="nav-item"><%= link_to "投稿する", new_post_path, class: "nav-link" %></li>
            <% end %>
            <% if current_user %>
              <li class="nav-item"><%= link_to "いいね", likes_user_path(current_user), class: "nav-link" %></li>
              <li class="nav-item dropdown" data-turbo-method="false">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><%= current_user.nickname %></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'マイページ', user_path(current_user), class: "dropdown-item" %></li>
                  <li><%= link_to 'ログアウト', destroy_user_session_path, class: 'dropdown-item', data: { turbo_method: :delete } %></li>
                </ul>
              </li>
            <% else %>
              <% if controller_name == "sessions" %>
                <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: "nav-link" %></li>
              <% elsif controller_name == "registrations" %>
                <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link" %></li>
              <% else %>
                <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link" %></li>
                <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: "nav-link" %></li>
              <% end %>            
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    
    

      
      <%= yield %>
  </div>
  </body>
</html>
