<div class="container background-section2">
  <h1 class="text-center">Let's edit!</h1>
    <div class="row">
      <div class="col-10 offset-1 col-md-4 offset-md-4"> 
        <%= form_with(model: @post, local: true) do |form| %>
          <div class="form-group">
            <%= form.text_area :content, class: "form-control posts-text", id: "post-info", placeholder: "コーディネートの説明を一言！", rows: "4", maxlength: "40" %>
          </div>
          <br>
          <div class="form-group">
            <%= form.text_field :tag_name, class: "form-control ", placeholder: "タグ" %>
          </div>
          <br>
          <div class="form-group text-center">
            <%= form.file_field :image, id: "post-image", class: "form-control-file" %>
            <br>
              <small class="text-muted">今の画像は、こちらです。↓</small>
            <%= image_tag @post.image, class: 'img-thumbnail mx-auto d-block', size: '180x180' if @post.image.attached? %>
            <br>
          </div>
          <div class="text-center">
            <%= form.submit "変更する", class: "btn btn-primary post-btn" %>
          </div>
        <% end %>
      </div>
    </div>
</div>
