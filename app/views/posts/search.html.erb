<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if @posts.empty? %>
        <h1>検索結果０</h1>
      <% else %>
        <h1>検索結果一覧</h1>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% if @posts.empty? %>
      <!-- キーワードが見つからなかった場合のメッセージ -->
      <p>申し訳ありません、該当のキーワードが見つかりませんでした。</p>
    <% else %>
      <% @posts.each do |post| %>
        <!-- 投稿内容の表示 -->
        <div class="col-md-4 mb-4">
          <div class="card">
            <!-- 投稿画像 -->
            <div class="post-image-container position-relative">
              <% if post.image.attached? %>
                <%= link_to post, style: 'position: relative;' do %>
                  <%= image_tag post.image, class: 'card-img-top post-image' %>
                  <div class="overlay">
                    <span class="text"></span>
                  </div>
                <% end %>
              <% end %>
            </div>
            <div class="card-body">
              <p class="card-text"><%= post.content %></p>
              <p class="card-text">
                <% post.tags.each do |tag| %>
                  <span class="badge bg-primary"><%= tag.tag_name %></span>
                <% end %>
              </p>
              <!-- 編集、削除ボタン (ログイン中の投稿者のみ表示) -->
              <% if user_signed_in? && current_user == post.user %>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to '編集', edit_post_path(post), class: 'btn btn-sm btn-outline-secondary' %>
                    <%= link_to '削除', post_path(post.id), data: { turbo_method: :delete }, class: 'btn btn-sm btn-outline-secondary' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
