<div class="container">
  <div class="card mb-4">
    <img src="<%= asset_path("hero.jpg") %>" class="card-img">
    <div class="card-img-overlay text-white d-flex flex-column justify-content-center ps-4">
      <div class="h1 mb-1">Share</div>
      <p class="mb-0 text-white-50">Happy people make happy fashion.</p>
    </div>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <!-- 投稿画像 -->
          <div class="post-image-container position-relative">
            <% if post.image.attached? %>
              <%= link_to post, style: 'position: relative;' do %>
                <%= image_tag post.image, class: 'card-img-top post-image' %>
                <div class="overlay">
                  <span class="text"></span>
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="card-body">
            <p class="card-text"><%= post.content %></p>
            <p class="card-text">
              <% post.tags.each do |tag| %>
                <span class="badge bg-primary"><%= tag.tag_name %></span>
              <% end %>
            </p>
            <!-- 編集、削除ボタン (ログイン中の投稿者のみ表示) -->
            <% if user_signed_in? && current_user == post.user %>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to '編集', edit_post_path(post), class: 'btn btn-sm btn-outline-secondary' %>
                  <%= link_to '削除', post, method: :delete, data: { confirm: '本当に削除しますか?' }, class: 'btn btn-sm btn-outline-secondary' %>
                </div>
              </div>
            <% end %>
            <small class="text-muted">
              投稿者: <%= link_to post.user.nickname, user_path(post.user), style: 'color: gray;' %>
            </small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
