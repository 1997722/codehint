<div class="container">
  <h3 class="text-center">編集する</h3>
  <%= form_with(model: @post, local: true) do |form| %>
    <div class="form-group">
      <%= form.text_area :content, class: "form-control posts-text", id: "post-info", placeholder: "コーディネートの説明（必須 400文字まで）", rows: "7", maxlength: "400" %>
    </div>
    <br>
    <div class="form-group">
      <%= form.text_field :tag_name, class: "form-control", placeholder: "タグ" %>
    </div>
    <br>
    <div class="form-group text-center">
      <%= form.file_field :image, id: "post-image", class: "form-control-file" %>
      <%= image_tag @post.image, class: 'img-thumbnail mx-auto d-block' if @post.image.attached? %>
      <small class="text-muted">画像サイズ: 400px x 400px がおすすめです。</small>
    </div>
    <br>
    <div class="text-center">
      <%= form.submit "変更する", class: "btn btn-primary post-btn" %>
    </div>
  <% end %>
</div>
